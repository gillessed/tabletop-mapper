{
    "compilerOptions": {                     
        "target": "es5",
        "lib": ["es5", "es6", "dom"],
        "experimentalDecorators": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "outDir": "build",
        "preserveConstEnums": true,
        "sourceMap": true,
        "jsx": "react"
    },
    "exclude": [
        "node_modules",
        "semantic"
    ],
    "include": [
        "main.ts",
        "declarations.d.ts"
    ]
}
{
  "compilerOptions": {
    "target": "ES6",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "ES2015",
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "build",
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "jsx": "react",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
  },
  "include": [
    "app/**/*.ts",
    "filer/**/*.ts",
    "electron/**/*.ts",
  ]
}

{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "outDir": "build",
    "preserveConstEnums": true,
    "sourceMap": true,
    "jsx": "react",
    "downlevelIteration": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "semantic"
  ],
  "include": [
    "main.ts",
    "ipc.ts",
    "declarations.d.ts",
  ]
}
